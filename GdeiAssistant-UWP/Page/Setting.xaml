<Page
    x:Class="GdeiAssistant.Page.Setting"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel Orientation="Vertical" Visibility="Visible">

        <TextBlock Text="设置" FontSize="30" Margin="20,20,0,20"/>
            <TextBlock Text="使用深色主题" Margin="20,0,0,0" />
        <ToggleSwitch Name="DarkThemeToggleSwitch" Width="Auto"  Margin="20,0,0,0" Toggled="DarkThemeToggleSwitch_Toggled">
                <ToggleSwitch.OffContent>
                    <TextBlock Text="关闭"/>
                </ToggleSwitch.OffContent>
                <ToggleSwitch.OnContent>
                    <TextBlock Text="开启"/>
                </ToggleSwitch.OnContent>
            </ToggleSwitch>
    </StackPanel>
    
</Page>
